
git config --global user.email "robert.citek@gmail.com"
git config --global user.name "Robert Citek"

## personal GitHub repos
git_personal="
  bash_customization
  docker
  odds-n-ends
"

for repo in ${git_personal} ; do
  echo == ${repo}
  ansible localhost -m git -a '
    repo=ssh://git@github.com/rwcitek/'${repo}'.git
    dest=~/src/'${repo}'
    accept_hostkey=yes
  ' &
done
wait

## PHS GitHub repos - read/write
