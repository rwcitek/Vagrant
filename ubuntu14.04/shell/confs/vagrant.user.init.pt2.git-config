## install jq
( cd ~/bin/ &&
  [ ! -f jq-1.5 ] && {
    wget 'https://github.com/stedolan/jq/releases/download/jq-1.5/jq-linux64' -O jq-1.5
    chmod +x jq-1.5 &&
    ln -snf jq-1.5 jq
  }
)


